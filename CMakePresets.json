{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "conf-common",
            "description": "general settings that apply to all configurations (targeted to release mode but ready to be overriden by debug settings)",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "ENABLE_CPPCHECK": "FALSE",
                "ENABLE_CLANG_TIDY": "FALSE"
            }
        },
        {
            "name": "conf-debug",
            "description": "debug with cppcheck and clang tidy",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "ENABLE_CPPCHECK": "TRUE",
                "ENABLE_CLANG_TIDY": "TRUE"
            }
        },
        {
            "name": "conf-msvc",
            "description": "msvc compiler",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "conf-clang",
            "description": "clang compiler",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "conf-gcc",
            "description": "gcc compiler",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "msvc-debug-mode",
            "displayName": "msvc debug",
            "inherits": [
                "conf-common",
                "conf-msvc",
                "conf-debug"
            ]
        },
        {
            "name": "msvc-release-mode",
            "displayName": "msvc release",
            "inherits": [
                "conf-common",
                "conf-msvc"
            ]
        },
        {
            "name": "clang-debug-mode",
            "displayName": "clang debug",
            "inherits": [
                "conf-common",
                "conf-clang",
                "conf-debug"
            ]
        },
        {
            "name": "clang-release-mode",
            "displayName": "clang release",
            "inherits": [
                "conf-common",
                "conf-clang"
            ]
        },
        {
            "name": "gcc-debug-mode",
            "displayName": "gcc debug",
            "inherits": [
                "conf-common",
                "conf-gcc",
                "conf-debug"
            ]
        },
        {
            "name": "gcc-release-mode",
            "displayName": "gcc release",
            "inherits": [
                "conf-common",
                "conf-gcc"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "conf-test-common",
            "description": "settings that apply to all configurations (no tests found results in error)",
            "hidden": true,
            "execution": {
                "noTestsAction": "error"
            }
        },
        {
            "name": "test-msvc-debug-mode",
            "displayName": "strict",
            "inherits": "conf-test-common",
            "configurePreset": "msvc-debug-mode"
        },
        {
            "name": "test-msvc-release-mode",
            "displayName": "strict",
            "inherits": "conf-test-common",
            "configurePreset": "msvc-release-mode"
        },
        {
            "name": "test-clang-debug-mode",
            "displayName": "strict",
            "inherits": "conf-test-common",
            "configurePreset": "clang-debug-mode"
        },
        {
            "name": "test-clang-release-mode",
            "displayName": "strict",
            "inherits": "conf-test-common",
            "configurePreset": "clang-release-mode"
        },
        {
            "name": "test-gcc-debug-mode",
            "displayName": "strict",
            "inherits": "conf-test-common",
            "configurePreset": "gcc-debug-mode"
        },
        {
            "name": "test-gcc-release-mode",
            "displayName": "strict",
            "inherits": "conf-test-common",
            "configurePreset": "gcc-release-mode"
        }
    ]
}